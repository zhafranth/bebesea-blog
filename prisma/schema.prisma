generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}


model User {
  id String @id @default(uuid())
  name String?
  username String @unique
  password String 
  role Role
  createdAt DateTime @default(now())
  posts Post[]
}

model Post {
  id          String     @id @default(uuid())
  title       String
  category    String
  tags        String
  authorId    String
  author      User       @relation(fields: [authorId], references: [id])
  date        String
  createdAt   DateTime   @default(now())
  status      String
  is_comment  Boolean
  content     String     @db.LongText
  updatedAt   DateTime   @updatedAt
  comments    Comment[]
  cover       String?
}

model Comment {
  id        String  @id @default(uuid())
  email     String
  name      String
  createdAt DateTime @default(now())
  comment   String
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
}

model Video {
  id        String  @id @default(cuid())
  title     String  @db.LongText
  url       String
  createdAt DateTime @default(now())

}